#include <stdio.h>

int main() {
    int p;
    printf("Введіть кількість розрядів p: ");
    scanf("%d", &p);

    // Створюємо таблицю для динамічного програмування
    long long dp[p + 1][4];

    // Ініціалізуємо початкові умови
    dp[1][0] = dp[1][2] = 1;
    dp[1][1] = dp[1][3] = 0;

    for (int i = 2; i <= p; i++) {
        dp[i][0] = dp[i - 1][2] + dp[i - 1][3]; // закінчується на 5 після одного 9 або двох 9
        dp[i][1] = dp[i - 1][0];               // закінчується на 55 після одного 5
        dp[i][2] = dp[i - 1][0] + dp[i - 1][1]; // закінчується на 9 після одного 5 або двох 5
        dp[i][3] = dp[i - 1][2];               // закінчується на 99 після одного 9
    }

    // Обчислюємо загальну кількість чисел
    long long result = dp[p][0] + dp[p][1] + dp[p][2] + dp[p][3];

    printf("Кількість чисел із %d розрядів: %lld\n", p, result);

    return 0;
}
